<UserControl x:Class="AudioVisuals.AudioPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioVisuals"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MinWidth="200" MinHeight="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <local:SignalLevel x:Name="_signalLevel"></local:SignalLevel>
            <StackPanel>
                <StackPanel x:Name="_wavePanels">
                </StackPanel>
                <local:TimeLine x:Name="_timeLine"></local:TimeLine>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
